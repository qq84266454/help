<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorf2"
              android:orientation="vertical">

	<include layout="@layout/layout_top"/>

	<include layout="@layout/layout_general_title"/>

	<android.support.v4.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="229dp">

				<View
					android:id="@+id/back_1"
					android:layout_width="match_parent"
					android:layout_height="110dp"
					android:background="@drawable/user_center_1"/>

				<View
					android:id="@+id/back_2"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_below="@id/back_1"
					android:background="@color/colorF7"/>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="170dp"
					android:layout_marginLeft="@dimen/dp_16"
					android:layout_marginRight="@dimen/dp_16"
					android:layout_marginTop="@dimen/dp_16"
					android:background="@drawable/user_center_2">

					<TextView
						android:id="@+id/mTvUsername"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="@dimen/dp_16"
						android:layout_marginTop="@dimen/dp_16"
						android:text="用户名"
						android:textColor="@color/black"
						android:textSize="20sp"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignLeft="@+id/mTvUsername"
						android:layout_below="@id/mTvUsername"
						android:layout_marginTop="@dimen/dp_16"
						android:text="ID:001122"/>

					<de.hdodenhof.circleimageview.CircleImageView
						android:src="@color/colorBA"
						android:id="@+id/mUserhead"
						android:layout_width="60dp"
						android:layout_height="60dp"
						android:layout_alignParentRight="true"
						android:layout_alignTop="@+id/mTvUsername"
						android:layout_marginRight="@dimen/dp_16"/>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="75dp"
						android:layout_alignParentBottom="true"
						android:orientation="horizontal">

						<RelativeLayout
							style="@style/style_userinfo_table_item">

							<TextView
								android:id="@+id/mTvFriendCount"
								style="@style/style_userinfo_table_item_text1"
								android:textSize="@dimen/sp_16"
								android:layout_above="@+id/mTvFriendCountHint"
								android:layout_centerHorizontal="true"
								android:layout_marginBottom="@dimen/dp_5"
								android:text="6"/>

							<TextView
								android:id="@+id/mTvFriendCountHint"
								style="@style/style_userinfo_table_item_text2"
								android:layout_alignParentBottom="true"
								android:layout_centerHorizontal="true"
								android:layout_marginBottom="@dimen/dp_16"
								android:text="朋友数"/>
						</RelativeLayout>

						<RelativeLayout
							style="@style/style_userinfo_table_item">


							<TextView
								android:id="@+id/mTvInvite"
								style="@style/style_userinfo_table_item_text1"
								android:layout_above="@+id/mTvInviteHint"
								android:textSize="@dimen/sp_16"
								android:layout_centerHorizontal="true"
								android:layout_marginBottom="@dimen/dp_5"
								android:text="12.00"/>

							<TextView
								android:id="@+id/mTvInviteHint"
								style="@style/style_userinfo_table_item_text2"
								android:layout_alignParentBottom="true"
								android:layout_centerHorizontal="true"
								android:layout_marginBottom="@dimen/dp_16"
								android:text="邀请奖励"/>

						</RelativeLayout>

						<RelativeLayout
							style="@style/style_userinfo_table_item">


							<TextView
								android:id="@+id/mTvResent"
								style="@style/style_userinfo_table_item_text1"
								android:layout_above="@+id/mTvResentHint"
								android:layout_centerHorizontal="true"
								android:layout_marginBottom="@dimen/dp_5"
								android:textSize="@dimen/sp_16"
								android:text="12.00"/>

							<TextView
								android:id="@+id/mTvResentHint"
								style="@style/style_userinfo_table_item_text2"
								android:layout_alignParentBottom="true"
								android:layout_centerHorizontal="true"
								android:layout_marginBottom="@dimen/dp_16"
								android:text="转发奖励"/>

						</RelativeLayout>
					</LinearLayout>

				</RelativeLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="@dimen/dp_44"
					android:layout_alignParentBottom="true"
					android:orientation="horizontal">

					<TextView
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:gravity="center"
						android:text="余额：0.00"
						android:textColor="#FF707070"
						android:textSize="@dimen/sp_12"/>

					<View
						android:layout_width="1dp"
						android:layout_height="15dp"
						android:layout_marginTop="15.5dp"
						android:background="@color/colorBA"/>

					<TextView
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:gravity="center"
						android:text="系统奖励：0.00"
						android:textColor="#FF707070"
						android:textSize="@dimen/sp_12"/>
				</LinearLayout>
			</RelativeLayout>

			<!--<View-->
			<!--android:layout_width="match_parent"-->
			<!--android:layout_height="0.5px"-->
			<!--android:layout_marginLeft="@dimen/dp_16"-->
			<!--android:background="@color/color_release_success_divider"/>-->

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="100dp"
				android:background="@drawable/bg_userinfo_table"
				android:orientation="horizontal">

				<RelativeLayout
					style="@style/style_userinfo_table_item">

					<TextView
						style="@style/style_userinfo_table_item_text1"
						android:layout_above="@+id/mTvShiShi"
						android:layout_centerHorizontal="true"
						android:layout_marginBottom="@dimen/dp_10"
						android:text="15"
						android:textColor="@color/color5A623"
						android:textSize="@dimen/sp_24"/>

					<TextView
						android:id="@+id/mTvShiShi"
						style="@style/style_userinfo_table_item_text1"
						android:layout_alignParentBottom="true"
						android:layout_centerHorizontal="true"
						android:layout_marginBottom="@dimen/dp_16"
						android:text="实时排名"/>

				</RelativeLayout>

				<View
					android:layout_width="0.5px"
					android:layout_height="match_parent"
					android:background="@color/color_release_success_divider"/>

				<RelativeLayout
					style="@style/style_userinfo_table_item">

					<TextView
						style="@style/style_userinfo_table_item_text1"
						android:layout_above="@+id/mTvWeek"
						android:layout_centerHorizontal="true"
						android:text="15"
						android:textColor="#FF10AEFF"
						android:textSize="@dimen/sp_24"/>

					<TextView
						android:id="@+id/mTvWeek"
						style="@style/style_userinfo_table_item_text1"
						android:layout_alignParentBottom="true"
						android:layout_centerHorizontal="true"
						android:layout_marginBottom="@dimen/dp_16"
						android:layout_marginTop="@dimen/dp_10"
						android:text="全网七日排名"/>
				</RelativeLayout>

				<View
					android:layout_width="0.5px"
					android:layout_height="match_parent"
					android:background="@color/color_release_success_divider"/>

				<RelativeLayout
					style="@style/style_userinfo_table_item">


					<TextView
						style="@style/style_userinfo_table_item_text1"
						android:layout_above="@+id/mTvPre"
						android:layout_centerHorizontal="true"
						android:text="15"
						android:layout_marginBottom="@dimen/dp_10"
						android:textColor="#FFF76260"
						android:textSize="@dimen/sp_24"/>
					<TextView
						android:id="@+id/mTvPre"
						style="@style/style_userinfo_table_item_text1"
						android:layout_alignParentBottom="true"
						android:layout_marginBottom="@dimen/dp_16"
						android:text="全网昨日排名"/>

				</RelativeLayout>
			</LinearLayout>

			<View
				android:layout_width="match_parent"
				android:layout_height="0.5px"
				android:background="@color/color_release_success_divider"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="100dp"
				android:background="@drawable/bg_userinfo_table"
				android:orientation="horizontal">

				<RelativeLayout
					style="@style/style_userinfo_table_item">

					<RelativeLayout
						android:id="@+id/mLLQRCode"
						style="@style/style_nine_outer">

						<ImageView
							android:id="@+id/mTvQRCode"
							style="@style/style_userinfo_table_item_text3"
							android:layout_centerHorizontal="true"
							android:src="@drawable/ic_qrcode"
							/>

						<TextView
							style="@style/style_userinfo_table_item_text1"
							android:layout_alignParentBottom="true"
							android:layout_marginTop="@dimen/dp_10"
							android:text="我的二维码"/>
					</RelativeLayout>
				</RelativeLayout>

				<View
					android:layout_width="0.5px"
					android:layout_height="match_parent"
					android:background="@color/color_release_success_divider"/>

				<RelativeLayout
					style="@style/style_userinfo_table_item">

					<RelativeLayout
						android:id="@+id/mLLMyDetail"
						style="@style/style_nine_outer"
						>

						<ImageView
							android:id="@+id/mTvDetail"
							style="@style/style_userinfo_table_item_text1"
							android:layout_centerHorizontal="true"
							android:layout_centerInParent="true"
							android:src="@drawable/icon_my_detail"
							/>

						<TextView
							style="@style/style_userinfo_table_item_text1"
							android:layout_alignParentBottom="true"
							android:text="我的明细"/>
					</RelativeLayout>
				</RelativeLayout>

				<View
					android:layout_width="0.5px"
					android:layout_height="match_parent"
					android:background="@color/color_release_success_divider"/>

				<RelativeLayout
					style="@style/style_userinfo_table_item">

					<RelativeLayout
						android:id="@+id/mLLMyFriend"
						style="@style/style_nine_outer">

						<ImageView
							android:id="@+id/mTvFriend"
							style="@style/style_userinfo_table_item_text1"
							android:layout_centerInParent="true"
							android:src="@drawable/icon_my_friend"
							/>

						<TextView
							style="@style/style_userinfo_table_item_text1"
							android:layout_alignParentBottom="true"
							android:text="我的好友"/>
					</RelativeLayout>
				</RelativeLayout>

			</LinearLayout>

			<View
				android:layout_width="match_parent"
				android:layout_height="0.5px"
				android:background="@color/color_release_success_divider"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="100dp"
				android:background="@drawable/bg_userinfo_table"
				android:orientation="horizontal">

				<RelativeLayout
					style="@style/style_userinfo_table_item">

					<RelativeLayout
						android:id="@+id/mLLMyMessage"
						style="@style/style_nine_outer">

						<ImageView
							android:id="@+id/mTvMyMessage"
							style="@style/style_userinfo_table_item_text1"
							android:layout_centerInParent="true"
							android:src="@drawable/icon_my_message"
							/>


						<TextView
							style="@style/style_userinfo_table_item_text1"
							android:layout_alignParentBottom="true"
							android:text="我的消息"/>
					</RelativeLayout>
				</RelativeLayout>

				<View
					android:layout_width="0.5px"
					android:layout_height="match_parent"
					android:background="@color/color_release_success_divider"/>

				<RelativeLayout
					style="@style/style_userinfo_table_item">

					<RelativeLayout
						android:id="@+id/mLLCompanyService"
						style="@style/style_nine_outer">

						<ImageView
							android:id="@+id/mTvCompanyService"
							style="@style/style_userinfo_table_item_text1"
							android:layout_centerInParent="true"
							android:src="@drawable/icon_my_service"
							/>

						<TextView
							style="@style/style_userinfo_table_item_text1"
							android:layout_alignParentBottom="true"
							android:text="企业服务"/>
					</RelativeLayout>
				</RelativeLayout>

				<View
					android:layout_width="0.5px"
					android:layout_height="match_parent"
					android:background="@color/color_release_success_divider"/>

				<RelativeLayout
					style="@style/style_userinfo_table_item">

					<RelativeLayout
						style="@style/style_nine_outer">

						<ImageView
							android:id="@+id/mTvSetting"
							style="@style/style_userinfo_table_item_text1"
							android:layout_centerInParent="true"
							android:src="@drawable/icon_my_set"
							/>

						<TextView
							style="@style/style_userinfo_table_item_text1"
							android:layout_alignParentBottom="true"
							android:text="设置"/>
					</RelativeLayout>
				</RelativeLayout>
			</LinearLayout>

			<View
				android:layout_width="match_parent"
				android:layout_height="0.5px"
				android:background="@color/color_release_success_divider"/>


		</LinearLayout>
	</android.support.v4.widget.NestedScrollView>

</LinearLayout>