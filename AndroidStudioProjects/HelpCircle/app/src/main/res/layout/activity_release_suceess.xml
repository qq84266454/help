<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".ui.ReleaseSuccessActivity">

	<ImageView
		android:layout_marginBottom="@dimen/dp_8"
		android:id="@+id/mIvTop"
		android:layout_width="match_parent"
		android:layout_height="83.5dp"
		android:src="@drawable/release_success_bg"/>
	<TextView
		android:layout_centerHorizontal="true"
		android:id="@+id/mTvSuccess"
		android:layout_width="wrap_content"
		android:layout_height="37.5dp"
		android:layout_below="@id/mIvTop"
		android:paddingLeft="@dimen/dp_20"
		android:text="发布成功"
		android:textColor="@color/black"
		android:textSize="@dimen/sp_24"/>
	<TextView
		android:id="@+id/mTvTop"
		android:layout_width="match_parent"
		android:layout_height="37.5dp"
		android:layout_below="@id/mTvSuccess"
		android:paddingLeft="@dimen/dp_20"
		android:text="分享到社区，获得更多助力！"
		android:textColor="@color/black"
		android:textSize="@dimen/sp_14"/>

	<android.support.v7.widget.RecyclerView
		android:id="@+id/mRvCommuity"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/mTvTop"
		android:layout_marginBottom="@dimen/dp_16"
		android:layout_marginTop="@dimen/dp_10"/>

	<LinearLayout
		android:id="@+id/mLLShare"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/mRvCommuity"
		android:orientation="vertical">

		<View
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:layout_marginLeft="@dimen/dp_20"
			android:background="@color/color_release_success_divider"/>



			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/dp_16"
				android:layout_marginLeft="@dimen/dp_20"
				android:layout_marginRight="@dimen/dp_20"
				android:layout_marginTop="@dimen/dp_10"
				android:orientation="horizontal">

				<TextView
					android:layout_weight="1"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:drawablePadding="@dimen/dp_10"
					android:drawableTop="@drawable/icon_wechat"
					android:gravity="center"
					android:text="微信"/>
				<TextView
					android:layout_weight="1"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:drawablePadding="@dimen/dp_10"
					android:drawableTop="@drawable/icon_friend"
					android:gravity="center"
					android:text="朋友圈"/>
				<TextView
					android:layout_weight="1"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:drawablePadding="@dimen/dp_10"
					android:drawableTop="@drawable/icon_qq"
					android:gravity="center"
					android:text="QQ"/>
				<TextView
					android:layout_weight="1"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:drawablePadding="@dimen/dp_10"
					android:drawableTop="@drawable/icon_webo"
					android:gravity="center"
					android:text="微博"/>
				<TextView
					android:layout_weight="1"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:drawablePadding="@dimen/dp_10"
					android:drawableTop="@drawable/icon_qqkongjian"
					android:gravity="center"
					android:text="QQ空间"/>
			</LinearLayout>


		<View
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:background="@color/color_release_success_divider"/>
	</LinearLayout>
<ImageView
	android:layout_alignParentBottom="true"
	android:layout_centerHorizontal="true"
	android:layout_marginBottom="49dp"
	android:src="@drawable/icon_complete"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"/>
</RelativeLayout>